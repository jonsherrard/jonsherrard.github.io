purple = #521ed6
white = #f5f5f5
black = #2e2e2e
html
	height 100%
	width 100%
body
	height 100%
	width 100%
	font-family 'Chaf'
	font-weight normal
	font-size 1em
	color black
	padding 0px !important
	background white
img
	display block
	margin auto
.container
	padding-left 20px
	padding-right 20px
h1, h2, h3, h4, h5
	font-weight normal
a, a:visited, a:hover
	cursor pointer
	color purple
	line-height 1.4
#title
	margin 10px 0px
#title-bar
	margin-top 0px
.header-wrapper
	background white
	color purple
	a, a:hover, a:visited
		color purple
	hr
		border-color purple
.footer-wrapper
	background black
	color white
	min-height 50px
	//position absolute
	bottom 0px
	width 100%
	a, a:hover, a:visited
		margin 20px 0px
		color white
		display block
.txt-right
	text-align right
	display block
.txt-center
	text-align center
	display block
.center
	text-align center
.body-wrapper
	margin-top 20px
	hr
		border-color black
#page-container
	min-height 100%
	position relative

#bird-image
	margin 200px auto
@media (max-width: 767px)
	.txt-center, .txt-right
		display inline
		text-align left
	.body-wrapper
		padding-bottom 20px
	.footer-wrapper
		position relative
		width auto


