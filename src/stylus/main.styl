@import "fonts"
@import "normalize"
@import "nib"
global-normalize()
html, body
  height  100%
  font-family: "Big Caslon", "Book Antiqua", "Palatino Linotype", Georgia, serif;
  font-size 16px
  font-size 100%
  line-height 1.46
  -webkit-font-smoothing: antialiaed
  text-shadow: 1px 1px 1px rgba(0,0,0,0.004)
  color #333

a, a:visited, a:active
  color white
  text-decoration none
  cursor pointer
  &:hover
    text-transform lowercase

#content
  background-size cover
  min-width 100%
  max-height 400px
  overflow hidden
  img
    width 100%
    height auto
    position relative
    bottom 300px



.page-title
  font-size 5em
  text-align center
  color #333
  cursor default

.page-subtitle
  font-size 3em
  cursor default
  text-align center

@media(max-width:720px)
  #content
    img
      bottom 0px
      height auto
  .page-title
    font-size 3em
  .page-subtitle
    font-size 2em

@keyframes fadeInLeft
  0%
    opacity 0
    transform: translateX(-80px)
  100%
    opacity 1
    transform translateX(0)

.fade-in-left
  animation-name fadeInLeft
  animation-duration 1s
  animation-timing-function ease-out
  animation-fill-mode both

@keyframes fadeIn
  0%
    opacity 0
  100% 
    opacity 1

.fade-in
  animation-delay 0.5s
  animation-duration 1s
  animation-fill-mode both
  animation-name fadeIn

@import "graph"
